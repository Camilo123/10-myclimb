<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gpsbackground2"
    android:orientation="vertical"
    >
    

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:orientation="vertical"
        >
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="95dp"
	            >	                
	            <ImageView
	                android:id="@+id/iv_record"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="60dip" 
					android:gravity="left"
					android:layout_marginLeft="250dip"
	                android:src="@drawable/record" 
	                />
	        </RelativeLayout>
        
	        
	        
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="100dp"
	            android:orientation="horizontal"
	            >
       				
	            	<LinearLayout 
	            	    android:layout_width="160dp"
	            	    android:layout_height="match_parent"
	        		    android:orientation="horizontal"
	            	    >
	            	     <TextView
				                android:id="@+id/tv_altitude"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:text="0"
               				    android:gravity="center_vertical|right"			       
				                android:textAppearance="?android:attr/textAppearanceLarge"
				                android:textColor="@color/white"
				                android:textSize="55sp" />  
	            	</LinearLayout>
                    <LinearLayout 
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                           <TextView
				                android:id="@+id/tv_avgSpeed"
				                android:layout_width="match_parent"
				                android:layout_height="match_parent"
				                android:text="M"
               				   android:gravity="center_vertical|right"			       
				                android:textAppearance="?android:attr/textAppearanceLarge"
				                android:textColor="@color/white"
				                android:textSize="55sp" />
                       
                    </LinearLayout>
	        
			</LinearLayout>
	</LinearLayout>
	         
		    <TableLayout
		        android:layout_width="match_parent"
		        android:layout_height="130dp"
				>
		
		        <TableRow 
		            android:layout_width="match_parent"
		            android:layout_height="65dp"
		            >
		            <LinearLayout 
		                android:layout_width="155dp"
		                android:layout_height="match_parent"
		                >
			      		<TextView
					        android:id="@+id/tv_direction"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_centerVertical="true"
					        android:layout_marginLeft="58dp"
					        android:text="南"
					        android:textAppearance="?android:attr/textAppearanceLarge"
					        android:textColor="@color/white"
					        android:textSize="45sp" />
	            	</LinearLayout>
			       
		    		<LinearLayout     		  
		    		    android:orientation="vertical"    		    
		                android:layout_width="155dp"
		                android:layout_height="match_parent"
		    		    >
			    	 	<TextView
					          android:id="@+id/tv_longitude"
					          android:layout_width="match_parent"
					          android:layout_height="32dp"
					          android:text="0"
							  android:gravity="center_horizontal"
					          android:textAppearance="?android:attr/textAppearanceLarge"
					          android:textColor="@color/white" />
					    		    	    
			    		        
			   			<TextView
			                android:id="@+id/tv_latitude"
			                android:layout_width="match_parent"
			                android:layout_height="32dp"
			                android:gravity="center_horizontal"       
			                android:text="0"
			                android:textAppearance="?android:attr/textAppearanceLarge"
			                android:textColor="@color/white"
			                />
						

	    		</LinearLayout>
	        </TableRow>
	    
	 
	        <TableRow 
	            android:layout_width="match_parent"
	            android:layout_height="65dp"
	            >
	            <LinearLayout 
	               android:layout_width="155dp"
	               android:layout_height="65dp"
	               android:orientation="horizontal"
	               >
			       <TextView
			       android:id="@+id/tv_speed"
			       android:layout_width="80dp"
			       android:layout_height="match_parent"
			       android:text="0"
				   android:gravity="center_vertical|right"
			       android:textAppearance="?android:attr/textAppearanceLarge"
			       android:textColor="@color/white"
			       android:textSize="40sp" />
			    	
			     <TextView
			       android:id="@+id/tv_altitudeDiff"
			       android:layout_width="75dp"
			       android:layout_height="match_parent"
			       android:text="m/s"
				   android:gravity="center_vertical|right"			       
			       android:textAppearance="?android:attr/textAppearanceLarge"
			       android:textColor="@color/white"
			       android:textSize="35sp" />		       	                                
	            </LinearLayout>
	            
	            <LinearLayout 
	               android:layout_width="155dp"
	               android:layout_height="match_parent"                
	                >
	            <Chronometer
			          android:id="@+id/timer"
			          android:layout_width="match_parent"
			          android:layout_height="match_parent"
			          android:text="Chronometer"
			          android:gravity="center"
			          android:textColor="@color/white"
			          android:textSize="35sp" />
	                                          
	            </LinearLayout>
	                        
	        </TableRow>
	        
		</TableLayout>
	    
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
	
	      <Button
	          android:id="@+id/bt_startAndStop"
	          android:layout_width="130dp"
	          android:layout_height="50dp"
	          android:layout_alignParentTop="true"
	          android:layout_centerHorizontal="true"
	          android:layout_marginTop="16dp"
	          android:background="@drawable/startandstop_button"
	          android:text="Start"
	          android:textSize="48px" />	        
	    </RelativeLayout>     
	      
</LinearLayout>